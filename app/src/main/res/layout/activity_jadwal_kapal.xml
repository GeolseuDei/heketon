<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geolstudio.apipometera.ContainerActivity"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:background="@drawable/round_bg"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pencarian Kapal"
            android:textSize="34sp"
            android:textAlignment="center"
            android:textColor="@android:color/black"/>

        <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/et_tglMulai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Tanggal mulai (yyyy-mm-dd)"/>

        <EditText
            android:id="@+id/et_tglSelesai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="Tanggal selesai (yyyy-mm-dd)"/>

        <EditText
            android:id="@+id/et_namakodekapal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Nama / kode (Opsional)"/>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btn_cari_kapal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cari"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
